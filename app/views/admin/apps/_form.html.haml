- if @app.errors.any?
  .notification.error.png_bg
    = link_to image_tag("/images/admin/icons/cross_grey_small.png"), "#", :class => "close"
    %div
      = @app.errors.full_messages.join(', ')
- form_for(@app, :url => (@app.new_record? ? admin_apps_path : admin_app_path(@app)), :html => { :multipart => true }) do |f|
  %p
    %label App Title
    = f.text_field :title, :class => "text-input medium-input"
  %p
    %label App Description
    = f.text_area :desc, :class => "text-input textarea large-input", :style => "height: 100px;"
  %p
    %label Itunes Url
    = f.text_field :itunes_url, :class => "text-input large-input"
  %p
    %label Youtube Url
    = f.text_field :youtube_url, :class => "text-input large-input"
  %p
    %label App Type
    = f.select :app_type, ["iphone", "ipad"]
  %p
    %label Category
    = f.select :category, SITE_SETTINGS["categories"]
  %p
    %label Position
    = f.text_field :position, :class => "text-input tiny-input"
    %br
    %small
      Descending sequence by position numberã€‚
  %p
    %label Icon
    = f.file_field :icon
  %p
    = submit_tag("Submit", :class => "button")
    

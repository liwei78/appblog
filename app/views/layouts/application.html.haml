!!!
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    %title= seo_title
    %meta{'http-equiv' => "content-type", :content => "text/html; charset=UTF-8"}
    %meta{'name' => "keywords", :content => "#{SITE_SETTINGS["keywords"]}"}
    %meta{'name' => "description", :content => "#{SITE_SETTINGS["description"]}"}
    %meta{'name' => "author", :content => "#{SITE_SETTINGS["author"]}"}
    = stylesheet_link_tag "style"
    = javascript_include_tag "jquery", "rails", "application"
    = csrf_meta_tag
    = yield :header
  %body
    .header
      .nav
        .logo
          = image_tag("logo.png")
        .text
          .appblog
            = image_tag("myappblog.png")
          %span.tabs_left
            = image_tag("tabs_left.png")
          .tabs 
            %ul
              %li= link_to raw("<span>首页</span>"), "#"
              %li= link_to raw("<span>最火APP排行</span>"), "#"
              %li= link_to raw("<span>降价</span>"), "#"
              %li= link_to raw("<span>分享</span>"), "#"
              %li= link_to raw("<span>博客</span>"), "#"
              %li= link_to raw("<span>关于我们</span>"), "#"
              %li.no-split= link_to raw("<span>邮件订阅</span>"), "#"
              .clearfix
          %span.tabs_right
            = image_tag("tabs_right.png")
      .sub_nav.clearfix

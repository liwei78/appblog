!!!
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    %title= seo_title
    %meta{'http-equiv' => "content-type", :content => "text/html; charset=UTF-8"}
    %meta{'name' => "keywords", :content => "#{SITE_SETTINGS["keywords"]}"}
    %meta{'name' => "description", :content => "#{SITE_SETTINGS["description"]}"}
    %meta{'name' => "author", :content => "#{SITE_SETTINGS["author"]}"}
    = stylesheet_link_tag "style"
    = javascript_include_tag "jquery", "rails", "application"
    = csrf_meta_tag
    = yield :header
  %body
    .header
      .nav
        .logo
          = image_tag("logo.png")
        .text
          .appblog
            = image_tag("myappblog.png")
          %span.tabs_left
            = image_tag("tabs_left.png")
          .tabs 
            %ul
              %li= link_to raw("<span>#{t :nav_home}</span>"), "#"
              %li= link_to raw("<span>#{t :nav_hot}</span>"), "#"
              %li.no-split= link_to raw("<span>#{t :nav_discount}</span>"), "#"
              %li.no-split= link_to raw("<span class='outer'><span class='inner'>#{t :nav_share}</span></span>"), "#", :class => "on"
              %li= link_to raw("<span>#{t :nav_blog}</span>"), "#"
              %li= link_to raw("<span>#{t :nav_about}</span>"), "#"
              %li.no-split= link_to raw("<span>#{t :nav_subscribe}</span>"), "#"
              .clearfix
          %span.tabs_right
            = image_tag("tabs_right.png")
      .sub_nav.clearfix
        .nav_box
          .sub_nav_div.share
            %span= link_to raw("<span>#{t :subn_share}</span>"), "#"
            %span.split &nbsp;
            %span= link_to raw("<span>#{t :subn_upload}</span>"), "#"
    .main
      .layout
        .content
          = yield
        .sider
          = render :partial => "layouts/sider"
        .clearfix
    .footer